{% extends 'base.html.twig' %}

{% block body %}
    <h1>CommentPreference list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Liked</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentPreference in commentPreferences %}
            <tr>
                <td><a href="{{ path('commentpreference_show', { 'id': commentPreference.id }) }}">{{ commentPreference.id }}</a></td>
                <td>{% if commentPreference.liked %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('commentpreference_show', { 'id': commentPreference.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('commentpreference_edit', { 'id': commentPreference.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commentpreference_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
