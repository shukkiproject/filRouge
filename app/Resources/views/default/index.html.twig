{% extends 'layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

      <div class="item active">
        <img  class="hidden-xs" src="http://thetvdb.com/banners/graphical/267440-g.jpg" alt="L'attaque des titans">
        <img class="visible-xs" src="http://thetvdb.com/banners/posters/267440-10.jpg" alt="L'attaque des titans">
      </div>

<!--       <div class="item">
        <img class="hidden-xs" src="http://thetvdb.com/banners/graphical/281662-g6.jpg" alt="Daredevil" width="460" height="345">
        <img class = "visible-xs" src="http://thetvdb.com/banners/posters/281662-21.jpg" alt="Daredevil" width="460" height="345">
      </div> -->

      <div class="item">
        <img class="hidden-xs" src="http://thetvdb.com/banners/graphical/85249-g3.jpg" alt="FullMetal Alchemist - Brotherhood" width="460" height="345">
        <img class = "visible-xs" src="http://thetvdb.com/banners/posters/85249-7.jpg" alt="FullMetal Alchemist - Brotherhood">
      </div>

<!--       <div class="item">
        <img class="hidden-xs" src="http://thetvdb.com/banners/graphical/260449-g3.jpg" alt="Vikings" width="460" height="345">
        <img class = "visible-xs" src="http://thetvdb.com/banners/posters/260449-8.jpg" alt="Vikings" width="460" height="345">
      </div> -->
    
      <div class="item">
        <img class="hidden-xs" src="http://thetvdb.com/banners/graphical/79089-g6.jpg" alt="Samurai Champloo" width="460" height="345">
        <img class = "visible-xs" src="http://thetvdb.com/banners/posters/79089-10.jpg" alt="Samurai Champloo" width="460" height="345">
      </div>

      <div class="item">
        <img class="hidden-xs" src="http://thetvdb.com/banners/graphical/80096-g2.jpg" alt="Tengen Toppa Gurren Lagann" width="460" height="345">
        <img class = "visible-xs" src="http://thetvdb.com/banners/posters/80096-8.jpg" alt="Tengen Toppa Gurren Lagann" width="460" height="345">
      </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="marketing">

      <!-- Two columns of text below the carousel -->
      <div class="row">
        <div class="col-lg-6">
          <i class="fa fa-archive fa-3x" color='grey' aria-hidden="true"></i>
          <h2>{{ 'index.discover.title'|trans }}</h2>
          <p>{{ 'index.discover.text'|trans }}</p>
          <p><a class="btn btn-primary" href="{{ path('series_index')}}" role="button">{{ 'index.discover.button'|trans }} &raquo;</a></p>
        </div><!-- /.col-lg-6 -->
        <div class="col-lg-6">
          <i class="fa fa-comments fa-3x" aria-hidden="true"></i>
          <h2>{{ 'index.discuss.title'|trans }}</h2>
          <p>{{ 'index.discuss.text'|trans }}</p>
          <p><a class="btn btn-info" type="button"href="{{ path('fos_user_registration_register')}}" role="button">{{ 'index.discuss.button'|trans }} &raquo;</a></p>
        </div><!-- /.col-lg-6 -->
      </div><!-- /.row -->
    </div>


   
{% endblock %}

