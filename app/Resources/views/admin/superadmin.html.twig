{% extends "base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="panel panel-default">
      <div class="panel-heading"><h2>{{ 'superadmin.title'|trans }}</h2></div>
      <div class="panel-body">

		<div class="table-responsive">
    		<table class="table table-hover">
		        <thead>
		            <tr>
		                <th>{{ 'superadmin.users'|trans }}</th>
		                <th>{{ 'superadmin.roles'|trans }}</th>
		                <th>{{ 'superadmin.actions'|trans }}</th>
		            </tr>
		        </thead>
		        <tbody>
		        {% for user in users %}
					<tr>
						<td>{{ user.username }}</td>
						<td>
							{% for role in user.roles %}
							<div>{{ role }}</div>
							{% endfor %}
						</td>
						<td>
						<a href="{{ path('superadmin_demote', { 'username': user.username }) }}"><button class="btn btn-warning pull-right">{{ 'superadmin.demote'|trans }}</button></a>
						<a href="{{ path('superadmin_promote', { 'username': user.username }) }}"><button class="btn btn-success pull-right">{{ 'superadmin.promote'|trans }}</button></a>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
		</div>
      </div>
    </div>

{% endblock %}
