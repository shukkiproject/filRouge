{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-8 col-md-offset-2">
    <h1>{{ 'comment.new.heading'|trans }}</h1>
    <!-- {{ form_start(form) }} -->
    <div class="well well-sm">
    {{ form_start(form, {'action': path('comment_new', { 'id': series.id }), 'method': 'POST'}) }}

     <div class="form-group">
        {{ form_label(form.title, 'comment.new.title'|trans) }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}<br>
    </div>
    <div class="form-group">
        {{ form_label(form.comment, 'comment.new.comment'|trans) }}
        {{ form_errors(form.comment) }}
        {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}<br>
    </div>
   
    <input type="submit" class="btn btn-default" value="{{ 'comment.new.confirm'|trans }}" />
    {{ form_end(form) }}

	</div>
</div>