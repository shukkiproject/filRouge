{% extends 'base.html.twig' %}

{% block body %}
    <h1>Series</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ series.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ series.name }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ series.synopsis }}</td>
            </tr>
            {% if series.poster %}
            <tr>
                <th>Poster</th>
                <td><img src="{{ series.poster }}" alt=""></td>
            </tr>
            {% endif %}
            <tr>
                <th>Persons</th>
                <td>{{ series.persons }}</td>
            </tr>
        </tbody>
    </table>

     <h1>Comment</h1>

    <table>
        <tbody>
        {% for comment in series.comments %}
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>user</th>
                <td>{{ comment.user }}</td>
            </tr>
            {% if comment.episode %}
            <tr>
                <th>episode</th>
                <td>{{ comment.episode }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if comment.date %}{{ comment.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <td><a href="{{ path('comment_edit', { 'id': comment.id }) }}">Edit</a></td>
                        <td>{{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}</td>
                    </tr>

        {% endfor %}    
        </tbody>
    </table>

    <h1>Comment creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('comment_index') }}">Back to the list</a>
        </li>
    </ul>

    <ul>
        <li>
            <a href="{{ path('series_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('series_edit', { 'id': series.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

{% endblock %}
