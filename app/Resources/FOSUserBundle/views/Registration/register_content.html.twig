{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
   
<div class="col-md-6 col-md-offset-3">
	<h2>{{ 'registration.form_title'|trans }}</h2>
    <form role="form">
        <div class="form-group">
        {{ form_label(form.firstname, 'registration.form_firstname'|trans) }}
        {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'registration.firstname_placeholder'|trans}}) }}<br>

        {{ form_label(form.lastname, 'registration.form_lastname'|trans) }}
        {{ form_errors(form.lastname) }}
        {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'registration.lastname_placeholder'|trans}}) }}<br>

        {{ form_label(form.username, 'registration.form_username'|trans) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'registration.username_placeholder'|trans}}) }}<br>

        {{ form_label(form.email, 'registration.form_email'|trans) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'registration.email_placeholder'|trans}}) }}<br>

        {{ form_label(form.birthday, 'registration.form_birthday'|trans) }}
        {{ form_errors(form.birthday) }}
        {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}<br>

        {{ form_label(form.imageFile, 'registration.form_imageFile'|trans) }}
        {{ form_errors(form.imageFile) }}
        {{ form_widget(form.imageFile, {'attr': {'class': 'btn btn-default'}}) }}<br>

        {{ form_label(form.plainPassword.first, 'registration.form_password'|trans) }}
		{{ form_errors(form.plainPassword.first) }}
		{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}<br>

        {{ form_label(form.plainPassword.second, 'registration.form_password_check'|trans) }}
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}<br>
        
        <button type="submit" class="btn btn-default"/>{{ 'registration.submit'|trans }}</button>
    </form>
</div>
{{ form_end(form) }}





