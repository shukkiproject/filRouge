{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

<div class="col-md-6 col-md-offset-3">
	<h2>{{ 'registration.edit'|trans }}</h2>
    <form role="form">
        <div class="form-group">

        {{ form_label(form.username, 'registration.form_username'|trans) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'registration.username_placeholder'|trans}}) }}<br>

        {{ form_label(form.email, 'registration.form_email'|trans) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'registration.email_placeholder'|trans}}) }}<br>

        {{ form_label(form.current_password, 'registration.form_password'|trans) }}
		{{ form_errors(form.current_password) }}
		{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}<br>

        <button type="submit" class="btn btn-default"/>{{ 'registration.submit'|trans }}</button>
    </form>
</div>
{{ form_end(form) }}
